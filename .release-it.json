{
    "hooks": {
        "after:bump": "./scripts/update-saucectl-template.sh"
    },
    "git": {
        "commitMessage": "Release v${version}",
        "requireBranch": "master",
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "draft": true,
        "releaseName": "v${version}",
        "releaseNotes": "./scripts/generate-release-notes.sh ${latestVersion} ${version}"
    }
}